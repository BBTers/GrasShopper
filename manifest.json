{
    "manifest_version": 2,
  
    "name": "GrasShopper Plugin",
    "description": "This extension will analyze a product's Ecological footprint on Amazon",
    "version": "1.0",

    "background" : {
        "scripts" : ["./background.js", "./client/src/js/popup.js"]
    },

    "options_page": "./options.html",

    "browser_action": {
     "default_icon": "client/src/images/icon.png",
     "default_popup": "client/popup.html"
    },

    "icons" : {
        "16" : "./icon.png"
    },
    
    "permissions": [
        "activeTab",
        "https://www.amazon.com/*",
        "https://www.amazon.ca/*",
        "tabs"
     ]
  }